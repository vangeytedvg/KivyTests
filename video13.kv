# Make all buttons look the same
<Button>:
    font_size: 32
    size_hint: (0.3,0.3)

<MyLayout>:
    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            pos_hint: {"x": 0, "top": 1}

        Button:
            text: "Top Right"
            pos_hint: {"x": .7, "top": 1}

        Button:
            text: "Center"
            pos_hint: {"x": .35, "y": .35}

        Button:
            text: "Button Right"
            pos_hint: {"x": .7, "bottom": 1}

        Button:
            text: "Button Left"
            pos_hint: {"x":0}
