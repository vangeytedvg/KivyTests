<Button>:
    font_size: 32
    background_normal: ''
    background_color: (0,0,1,1)

<TextInput>:
    background_color: (150/255, 150/255, 150/255,1)

<Label>:
    font_size: 25

<MyBoxLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45
            backgroundcolor: (182/255,66/255,245/255,1)
            canvas.before:
                Color:
                    rgba: self.backgroundcolor
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 5


        TextInput:
            multiline: False

        Label:
            text: "Favorite Pizza"
            font_size: 32
            background_color: (0,1,1,1)
            color: (0,0,0,1)
            # Strange way to change the color of a label
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


        TextInput:
            multiline: False

        Button:
            text: "Submit"

        Button:
            text: "Clear"