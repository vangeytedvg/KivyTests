<MyLayout>:
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Select favorite car color"
            font_size: 32

        GridLayout:
            cols: 2

            Label:
                text: "Red"
                font_size: 20
            CheckBox:
                group: "colors"
                on_active: root.checkbox_click(self, self.active, "Red")

            Label:
                text: "Green"
                font_size: 20
            CheckBox:
                group: "colors"
                on_active: root.checkbox_click(self, self.active, "Green")

            Label:
                text: "Blue"
                font_size: 20
            CheckBox:
                group: "colors"
                on_active: root.checkbox_click(self, self.active, "Blue")

            Label:
                text: "Black"
                font_size: 20
            CheckBox:
                group: "colors"
                on_active: root.checkbox_click(self, self.active, "Black")


        Label:
            id: output_label
            text: ""