<MyLayout>:
    id: my_widget
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Enter a word"
            font_size: 32

        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Check Spelling"
            on_press: root.press()