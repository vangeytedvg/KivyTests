#:import Factory kivy.factory.Factory
<MyPopUp@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.2
    pos_hint: {"x": 0.2, "top": 0.9}
    title: "Ziettekie"


    Button:
        text: "Close me"
        font_size: 24
        on_release: root.dismiss()

<MyLayout>:

    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Popup Sample"
            font_size: 32

        Button:
            text: "Show Poppeken up"
            font_size: 32

            on_release: Factory.MyPopUp().open()