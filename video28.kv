<MyLayout>:
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Select Pizza Topping"
            font_size: 32

        GridLayout:
            cols: 2

            Label:
                text: "Pepperoni"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Pepperoni")

            Label:
                text: "Kjeis"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Kjeis")

            Label:
                text: "Ajoin"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Ajoin")

            Label:
                text: "Salami"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Salami")


        Label:
            id: output_label
            text: ""